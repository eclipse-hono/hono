[
  ["router", {
    "id": "Hono.Sandbox.Router",
    "mode": "standalone",
    "workerThreads": 3
  }],

  ["authServicePlugin", {
    "name": "Hono Auth",
    "host": "${hono.auth.service}${service.suffix}",
    "port": 5671,
    "sslProfile": "internal"
  }],

  ["sslProfile", {
    "name": "internal",
    "protocols": "TLSv1.2",
    "caCertFile": "${secret.path}/trusted-certs.pem"
  }],

  ["sslProfile", {
    "name": "external",
    "protocols": "TLSv1.2",
    "caCertFile": "${secret.path}/trusted-certs.pem",
    "certFile": "${secret.path}/hono.eclipse.org-cert.pem",
    "privateKeyFile": "${secret.path}/hono.eclipse.org-key.pem"
  }],

  ["listener", {
    "sslProfile": "external",
    "requireSsl": true,
    "host": "0.0.0.0",
    "port": 5671,
    "initialHandshakeTimeoutSeconds": 3,
    "maxSessionFrames": 100,
    "linkCapacity": 100,
    "authenticatePeer": true,
    "saslMechanisms": "PLAIN",
    "saslPlugin": "Hono Auth"
  }],

  ["listener", {
    "host": "0.0.0.0",
    "port": 5672,
    "initialHandshakeTimeoutSeconds": 3,
    "maxSessionFrames": 100,
    "linkCapacity": 100,
    "authenticatePeer": true,
    "saslMechanisms": "PLAIN",
    "saslPlugin": "Hono Auth"
  }],

  ["listener", {
    "host": "0.0.0.0",
    "port": 5673,
    "initialHandshakeTimeoutSeconds": 3,
    "maxSessionFrames": 300,
    "linkCapacity": 100,
    "authenticatePeer": false,
    "logMessage": "none"
  }],

  ["connector", {
    "name": "broker",
    "host": "${hono.artemis.service}${service.suffix}",
    "port": 5672,
    "role": "route-container",
    "saslUsername": "artemis",
    "saslPassword": "artemis"
  }],

  ["linkRoute", {
    "prefix": "event/",
    "direction": "in",
    "connection": "broker"
  }],

  ["linkRoute", {
    "prefix": "event/",
    "direction": "out",
    "connection": "broker"
  }],

  ["policy", {
    "maxConnections": 220,
    "enableVhostPolicy": true,
    "defaultVhost": "hono"
  }],

  ["vhost", {
      "hostname": "hono",
      "maxConnections": 200,
      "maxConnectionsPerUser": 200,
      "maxConnectionsPerHost": 50,
      "allowUnknownUser": true,
      "groups": {
        "$default": {
          "maxSessions": 10,
          "remoteHosts": "*"
        }
      }
  }],

  ["vhost", {
      "hostname": "hono-internal",
      "maxConnections": 50,
      "allowUnknownUser": true,
      "groups": {
        "$default": {
          "remoteHosts": "*",
          "allowUserIdProxy": true,
          "allowAnonymousSender": true,
          "sources": "control/*, command/*",
          "targets": "telemetry/*, event/*, control/*, command_response/*"
        }
      }
  }],

  ["log", {
    "module": "DEFAULT",
    "enable": "info+"
  }]
]
