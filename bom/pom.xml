    <!--
      We want to allow users to run containers in a rootless Docker environment.
      For that purpose, the JVM needs to support cgroups v2 based resource limits
      specified on the containers. OpenJDK supports this starting with version 15:
      https://bugs.openjdk.java.net/browse/JDK-8230305
     -->
    <java-base-image.name>docker.io/eclipse-temurin:17-jre-focal</java-base-image.name>
    <jjwt.version>0.11.2</jjwt.version>
    <!--
      Explicitly override Kafka 3.1 client version defined by Quarkus because
      vertx-kafka-client 4.2.x is incompatible with Kafka 3.1 client.
      See https://github.com/quarkusio/quarkus/issues/22000
    -->
    <kafka-client.version>2.8.1</kafka-client.version>
    <kafka.image.name>confluentinc/cp-kafka:7.2.0</kafka.image.name>
    <logback.version>1.2.9</logback.version>
    <mongodb-image.name>mongo:4.4</mongodb-image.name>
