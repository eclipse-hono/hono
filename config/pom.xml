<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.eclipse.hono</groupId>
    <artifactId>hono-bom</artifactId>
    <version>0.5-SNAPSHOT</version>
    <relativePath>../bom</relativePath>
  </parent>
  <artifactId>hono-config</artifactId>
  <description>Default Hono server configuration to be used by other modules.</description>

  <properties>
    <image.target>hono-default-config</image.target>
    <maven.source.skip>true</maven.source.skip>
    <maven.javadoc.skip>true</maven.javadoc.skip>
  </properties>

  <build>
    <resources>
      <resource>
        <directory>${project.basedir}/config</directory>
        <includes>
          <include>**/*</include>
        </includes>
        <targetPath>config</targetPath>
      </resource>
      <resource>
        <directory>${project.basedir}/src/main/resources</directory>
        <includes>
          <include>**/*</include>
        </includes>
      </resource>
    </resources>
  </build>

  <profiles>
    <profile>
      <id>build-docker-image</id>
      <activation>
        <property>
          <name>docker.host</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>io.fabric8</groupId>
            <artifactId>docker-maven-plugin</artifactId>
            <configuration>
              <images>
                <image>
                  <build>
                    <from>tianon/true</from>
                    <volumes>
                      <volume>/etc/hono</volume>
                    </volumes>
                    <assembly>
                      <mode>dir</mode>
                      <basedir>/etc/hono</basedir>
                      <inline>
                        <id>config</id>
                        <fileSets>
                          <fileSet>
                            <directory>${project.basedir}/src/main/resources</directory>
                            <outputDirectory>.</outputDirectory>
                            <includes>
                              <include>**/*</include>
                            </includes>
                          </fileSet>
                        </fileSets>
                      </inline>
                    </assembly>
                  </build>
                </image>
                <image>
                  <alias>qpid-default-config</alias>
                  <name>eclipsehono/qpid-default-config:${project.version}</name>
                  <build>
                    <from>tianon/true</from>
                    <tags>
                      <tag>${project.version}</tag>
                    </tags>
                    <volumes>
                      <volume>/etc/qpid-dispatch</volume>
                    </volumes>
                    <assembly>
                      <mode>dir</mode>
                      <basedir>/etc/qpid-dispatch</basedir>
                      <inline>
                        <id>qpid-dispatch</id>
                        <fileSets>
                          <fileSet>
                            <directory>${project.basedir}/qpid</directory>
                            <outputDirectory>.</outputDirectory>
                            <includes>
                              <include>**/*</include>
                            </includes>
                          </fileSet>
                        </fileSets>
                      </inline>
                    </assembly>
                  </build>
                </image>
                <image>
                  <alias>qpid-sasldb</alias>
                  <name>eclipsehono/qpid-sasldb:${project.version}</name>
                  <build>
                    <from>tianon/true</from>
                    <tags>
                      <tag>${project.version}</tag>
                    </tags>
                    <volumes>
                      <volume>/var/lib/qdrouterd</volume>
                    </volumes>
                    <assembly>
                      <mode>dir</mode>
                      <basedir>/var/lib/qdrouterd</basedir>
                      <inline>
                        <id>qpid-sasldb</id>
                        <fileSets>
                          <fileSet>
                            <directory>${project.basedir}/sasl</directory>
                            <outputDirectory>.</outputDirectory>
                            <includes>
                              <include>**/*</include>
                            </includes>
                          </fileSet>
                        </fileSets>
                      </inline>
                    </assembly>
                  </build>
                </image>
              </images>
            </configuration>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>build</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <name>Hono Configuration</name>
</project>