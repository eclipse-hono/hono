[
  ["policyRuleset",
    {
      "applicationName": "hono",
      "maxConnections": 100,
      "maxConnPerUser": 20,
      "maxConnPerHost": 10,
      "userGroups": {
        "DEFAULT_TENANT": "user1@HONO",
        "anotherTenant": "user2@HONO",
        "anonymous" : "anonymous"
      },
      "ingressHostGroups": {
        "any": "*"
      },
      "ingressPolicies": {
        "DEFAULT_TENANT": "any",
        "anotherTenant": "any"
      },
      "connectionAllowDefault": false,
      "settings": {
        "DEFAULT_TENANT": {
          "allowDynamicSrc": false,
          "allowAnonymousSender": false,
          "sources": "telemetry.DEFAULT_TENANT, telemetry.DEFAULT_TENANT.*, event.DEFAULT_TENANT",
          "targets": ""
        },
        "anotherTenant": {
          "allowDynamicSrc": false,
          "allowAnonymousSender": false,
          "sources": "telemetry.anotherTenant",
          "targets": ""
        },
        "anonymous": {
          "allowDynamicSrc": false,
          "allowAnonymousSender": false,
          "sources": "telemetry.*",
          "targets": "telemetry.*"
        }
      }
    }
  ],
  ["policyRuleset",
    {
      "applicationName": "hono-internal",
      "maxConnections": 10,
      "maxConnPerUser": 10,
      "maxConnPerHost": 10,
      "userGroups": {
        "anonymous" : "anonymous"
      },
      "ingressHostGroups": {
        "any": "*"
      },
      "ingressPolicies": {
        "anonymous": "any"
      },
      "connectionAllowDefault": false,
      "settings": {
        "anonymous": {
          "maxSessions": 50,
          "allowDynamicSrc": false,
          "allowAnonymousSender": false,
          "sources": "$management",
          "targets": "telemetry.*, event.*, $management"
        }
      }
    }
  ]
]
