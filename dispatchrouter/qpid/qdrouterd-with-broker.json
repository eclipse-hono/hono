[
  ["router", {
    "id": "Hono.Example.Router",
    "mode": "standalone",
    "workerThreads": 4,
    "saslConfigName": "qdrouter-sasl",
    "saslConfigPath": "/etc/hono/qdrouter/"
  }],

  ["sslProfile", {
    "name": "external",
    "certDb": "/etc/hono/certs/trusted-certs.pem",
    "certFile": "/etc/hono/certs/qdrouter-cert.pem",
    "keyFile": "/etc/hono/certs/qdrouter-key.pem"
  }],

  ["sslProfile", {
    "name": "internal",
    "certDb": "/etc/hono/certs/trusted-certs.pem",
    "certFile": "/etc/hono/certs/qdrouter-cert.pem",
    "keyFile": "/etc/hono/certs/qdrouter-key.pem",
    "uidFormat": "oun"
  }],

  ["listener", {
    "sslProfile": "external",
    "requireSsl": true,
    "host": "0.0.0.0",
    "port": 5671,
    "authenticatePeer": "yes",
    "saslMechanisms": "PLAIN"
  }],

  ["listener", {
    "host": "0.0.0.0",
    "port": 5672,
    "authenticatePeer": "yes",
    "saslMechanisms": "PLAIN"
  }],

  ["listener", {
    "sslProfile": "internal",
    "requireSsl": true,
    "host": "0.0.0.0",
    "port": 5673,
    "authenticatePeer": "yes",
    "saslMechanisms": "EXTERNAL"
  }],

  ["connector", {
    "name": "broker",
    "host": "broker",
    "port": 5672,
    "role": "route-container",
    "saslUsername": "artemis",
    "saslPassword": "artemis"
  }],

  ["linkRoute", {
    "prefix": "event/",
    "dir": "in",
    "connection": "broker"
  }],

  ["linkRoute", {
    "prefix": "event/",
    "dir": "out",
    "connection": "broker"
  }],

  ["address", {
    "prefix": "telemetry/",
    "distribution": "multicast"
  }],

  ["policy", {
    "maxConnections": 1000,
    "enableVhostPolicy": true,
    "defaultVhost": "hono"
  }],

  ["vhost", {
      "id": "hono",
      "maxConnections": 500,
      "maxConnectionsPerUser": 20,
      "maxConnectionsPerHost": 10,
      "groups": {
        "DEFAULT_TENANT": {
          "users": "user1@HONO",
          "remoteHosts": "*",
          "maxSessions": 100,
          "maxMessageSize": 102400,
          "sources": "telemetry/DEFAULT_TENANT, event/DEFAULT_TENANT"
        },
        "anotherTenant": {
          "users": "user2@HONO",
          "remoteHosts": "*",
          "maxSessions": 100,
          "maxMessageSize": 102400,
          "sources": "telemetry/anotherTenant"
        },
        "anonymous" : {
          "users": "anonymous",
          "sources": "telemetry.*",
          "targets": "telemetry.*"
        }
      }
  }],

  ["vhost", {
      "id": "hono-internal",
      "maxConnections": 100,
      "maxConnectionsPerUser": 10,
      "maxConnectionsPerHost": 10,
      "groups": {
        "Hono": {
          "users": "Eclipse IoT;Hono;hono",
          "remoteHosts": "*",
          "maxSessions": 500,
          "maxMessageSize": 204800,
          "sources": "$management",
          "targets": "telemetry/*, event/*, $management"
        }
      }
  }],

  ["log", {
    "module": "DEFAULT",
    "enable": "info+"
  }]
]
