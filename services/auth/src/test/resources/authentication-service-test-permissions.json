{
  "roles": {
    "protocol-adapter": [
      {
        "resource": "telemetry/*",
        "activities": [ "WRITE" ]
      },
      {
        "resource": "event/*",
        "activities": [ "WRITE" ]
      },
      {
        "resource": "registration/*",
        "activities": [ "READ", "WRITE" ]
      },
      {
        "operation": "registration/*:assert",
        "activities": [ "EXECUTE" ]
      },
      {
        "resource": "credentials/*",
        "activities": [ "READ", "WRITE" ]
      },
      {
        "operation": "credentials/*:get",
        "activities": [ "EXECUTE" ]
      }
    ],
    "device-manager": [
      {
        "resource": "registration/*",
        "activities": [ "READ", "WRITE" ]
      },
      {
        "operation": "registration/*:*",
        "activities": [ "EXECUTE" ]
      }
    ],
    "consumer": [
      {
        "resource": "telemetry/*",
        "activities": [ "READ" ]
      },
      {
        "resource": "event/*",
        "activities": [ "READ" ]
      }
    ]
  },
  "users": {
    "http-adapter@HONO": {
      "mechanism": "PLAIN",
      "password": "secret",
      "authorities": [ "hono-component", "protocol-adapter", "device-manager" ]
    },
    "mqtt-adapter": {
      "mechanism": "EXTERNAL",
      "authorities": [ "hono-component", "protocol-adapter" ]
    },
    "hono-client@HONO": {
      "mechanism": "PLAIN",
      "password": "secret",
      "authorities": [ "protocol-adapter", "device-manager" ]
    },
    "userA": {
      "mechanism": "EXTERNAL",
      "authorities": [ "consumer" ]
    },
    "userB": {
      "mechanism": "EXTERNAL",
      "authorities": [ "consumer" ]
    }
  }
}