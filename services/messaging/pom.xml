<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.eclipse.hono</groupId>
    <artifactId>hono-services</artifactId>
    <version>0.5-M6-SNAPSHOT</version>
  </parent>
  <artifactId>hono-service-messaging</artifactId>
  <name>Hono Messaging</name>
  <description>The Messaging service implements Hono's Telemetry and Event APIs.</description>

  <properties>
    <hono.messaging.keyPath>/etc/hono/certs/hono-messaging-key.pem</hono.messaging.keyPath>
    <hono.messaging.certPath>/etc/hono/certs/hono-messaging-cert.pem</hono.messaging.certPath>
  </properties>

  <dependencies>
    <dependency>
      <groupId>io.vertx</groupId>
      <artifactId>vertx-unit</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-actuator</artifactId>
    </dependency>
    <dependency>
     <groupId>org.assertj</groupId>
     <artifactId>assertj-core</artifactId>
    </dependency>
    <dependency>
     <groupId>org.eclipse.hono</groupId>
     <artifactId>hono-client</artifactId>
     <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>io.dropwizard.metrics</groupId>
      <artifactId>metrics-core</artifactId>
    </dependency>
    <dependency>
      <groupId>io.dropwizard.metrics</groupId>
      <artifactId>metrics-jvm</artifactId>
    </dependency>
    <dependency>
      <groupId>io.dropwizard.metrics</groupId>
      <artifactId>metrics-graphite</artifactId>
    </dependency>
    <dependency>
      <groupId>io.vertx</groupId>
      <artifactId>vertx-dropwizard-metrics</artifactId>
    </dependency>
    <dependency>
      <groupId>org.eclipse.hono</groupId>
      <artifactId>hono-service-base</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>build-docker-image</id>
      <activation>
        <property>
          <name>docker.host</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>io.fabric8</groupId>
            <artifactId>fabric8-maven-plugin</artifactId>
            <configuration>
              <images>
                <image>
                  <build>
                    <from>${java-base-image.name}</from>
                    <ports>
                      <port>5671</port>
                      <port>5672</port>
                    </ports>
                    <runCmds>
                      <runCmd>adduser -S -D hono nogroup</runCmd>
                    </runCmds>
                    <user>hono</user>
                    <workdir>/home/hono</workdir>
                    <cmd>
                      <exec>
                        <arg>java</arg>
                        <arg>-Dvertx.cacheDirBase=/tmp</arg>
                        <arg>-Dnetworkaddress.cache.ttl=0</arg>
                        <arg>-Dnetworkaddress.cache.negative.ttl=0</arg>
                        <arg>-jar</arg>
                        <arg>/opt/hono/${project.artifactId}-${project.version}-${classifier.spring.boot.artifact}.jar</arg>
                      </exec>
                    </cmd>
                    <assembly>
                      <mode>dir</mode>
                      <basedir>/</basedir>
                      <inline>
                        <fileSets>
                          <fileSet>
                            <directory>${project.build.directory}/certs</directory>
                            <outputDirectory>etc/hono/certs</outputDirectory>
                            <includes>
                              <include>hono-messaging-*.pem</include>
                              <include>auth-server-cert.pem</include>
                              <include>trusted-certs.pem</include>
                            </includes>
                          </fileSet>
                          <fileSet>
                            <directory>${project.build.directory}</directory>
                            <outputDirectory>opt/hono</outputDirectory>
                            <includes>
                              <include>${project.artifactId}-${project.version}-${classifier.spring.boot.artifact}.jar</include>
                            </includes>
                          </fileSet>
                        </fileSets>
                      </inline>
                    </assembly>
                  </build>
                </image>
              </images>
              <resources>
                <env>
                  <HONO_AUTH_HOST>${hono.auth.host}</HONO_AUTH_HOST>
                  <HONO_AUTH_PORT>5671</HONO_AUTH_PORT>
                  <HONO_AUTH_NAME>${project.name}</HONO_AUTH_NAME>
                  <HONO_AUTH_VALIDATION_CERT_PATH>${hono.auth.validation.certPath}</HONO_AUTH_VALIDATION_CERT_PATH>
                  <HONO_AUTH_TRUST_STORE_PATH>${hono.trustStore.path}</HONO_AUTH_TRUST_STORE_PATH>
                  <HONO_DOWNSTREAM_HOST>hono-dispatch-router.hono</HONO_DOWNSTREAM_HOST>
                  <HONO_DOWNSTREAM_PORT>5673</HONO_DOWNSTREAM_PORT>
                  <HONO_DOWNSTREAM_NAME>${project.name}</HONO_DOWNSTREAM_NAME>
                  <HONO_DOWNSTREAM_KEY_PATH>${hono.messaging.keyPath}</HONO_DOWNSTREAM_KEY_PATH>
                  <HONO_DOWNSTREAM_CERT_PATH>${hono.messaging.certPath}</HONO_DOWNSTREAM_CERT_PATH>
                  <HONO_DOWNSTREAM_TRUST_STORE_PATH>${hono.trustStore.path}</HONO_DOWNSTREAM_TRUST_STORE_PATH>
                  <HONO_MESSAGING_KEY_PATH>${hono.messaging.keyPath}</HONO_MESSAGING_KEY_PATH>
                  <HONO_MESSAGING_CERT_PATH>${hono.messaging.certPath}</HONO_MESSAGING_CERT_PATH>
                  <HONO_MESSAGING_MAX_INSTANCES>1</HONO_MESSAGING_MAX_INSTANCES>
                  <HONO_MESSAGING_BIND_ADDRESS>0.0.0.0</HONO_MESSAGING_BIND_ADDRESS>
                  <HONO_MESSAGING_INSECURE_PORT_ENABLED>true</HONO_MESSAGING_INSECURE_PORT_ENABLED>
                  <HONO_MESSAGING_INSECURE_PORT_BIND_ADDRESS>0.0.0.0</HONO_MESSAGING_INSECURE_PORT_BIND_ADDRESS>
                  <HONO_MESSAGING_VALIDATION_SHARED_SECRET>${hono.regAssertion.sharedSecret}</HONO_MESSAGING_VALIDATION_SHARED_SECRET>
                  <HONO_METRIC_REPORTER_GRAPHITE_ACTIVE>true</HONO_METRIC_REPORTER_GRAPHITE_ACTIVE>
                  <HONO_METRIC_REPORTER_GRAPHITE_HOST>influxdb.hono</HONO_METRIC_REPORTER_GRAPHITE_HOST>
                  <HONO_METRIC_REPORTER_GRAPHITE_PORT>2003</HONO_METRIC_REPORTER_GRAPHITE_PORT>
                  <SPRING_PROFILES_ACTIVE>default,dev</SPRING_PROFILES_ACTIVE>
                </env>
              </resources>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
