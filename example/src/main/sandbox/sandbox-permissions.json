{
  "roles": {
    "protocol-adapter": [
      {
        "resource": "telemetry/*",
        "activities": [ "WRITE" ]
      },
      {
        "resource": "event/*",
        "activities": [ "WRITE" ]
      },
      {
        "resource": "registration/*",
        "activities": [ "READ", "WRITE" ]
      },
      {
        "operation": "registration/*:assert",
        "activities": [ "EXECUTE" ]
      },
      {
        "resource": "credentials/*",
        "activities": [ "READ", "WRITE" ]
      },
      {
        "operation": "credentials/*:get",
        "activities": [ "EXECUTE" ]
      },
      {
        "resource": "tenant",
        "activities": [ "READ", "WRITE" ]
      },
      {
        "operation": "tenant/*:*",
        "activities": [ "EXECUTE" ]
      }
    ],
    "device-manager": [
      {
        "resource": "registration/*",
        "activities": [ "READ", "WRITE" ]
      },
      {
        "operation": "registration/*:*",
        "activities": [ "EXECUTE" ]
      }
    ],
    "consumer": [
      {
        "resource": "telemetry/*",
        "activities": [ "READ" ]
      },
      {
        "resource": "event/*",
        "activities": [ "READ" ]
      }
    ]
  },
  "users": {
    "${hono.adapter.http.username}": {
      "mechanism": "PLAIN",
      "password": "${hono.adapter.http.password}",
      "authorities": [ "hono-component", "protocol-adapter" ]
    },
    "${hono.adapter.mqtt.username}": {
      "mechanism": "PLAIN",
      "password": "${hono.adapter.mqtt.password}",
      "authorities": [ "hono-component", "protocol-adapter" ]
    },
    "${hono.adapter.kura.username}": {
      "mechanism": "PLAIN",
      "password": "${hono.adapter.kura.password}",
      "authorities": [ "hono-component", "protocol-adapter" ]
    },
    "hono-messaging": {
      "mechanism": "EXTERNAL",
      "authorities": []
    },
    "device-registry": {
      "mechanism": "EXTERNAL",
      "authorities": []
    }
  }
}
